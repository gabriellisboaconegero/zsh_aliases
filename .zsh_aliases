setpro(){
  if [ ! -d $HOME/.vars ];  then
    mkdir .vars
    echo "$HOME/.vars criado"
  fi

  if [ ! -f $HOME/.vars/current_project ];  then
    touch $HOME/.vars/current_project
    echo "$HOME/.vars/current_project"
  fi
  echo -n "Quer colocar como projeto $PWD? [Y/n]" 
  read ANSWER
  case $ANSWER in
    y|Y)
      echo $PWD > ~/.vars/current_project
    ;;
    *)
    CURRENT_PROJECT_VAR=`cat ~/.vars/current_project`
      echo "O projeto atual continua $CURRENT_PROJECT_VAR"
  esac
  
}
go(){
  cd $(cat ~/.vars/current_project)
}

